.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for(@blog) do |f|
      = f.error_notification

      .form-inputs
        = f.input :title
        = f.input :content, input_html: {:class => 'redactor', :rows => 40, :cols => 120 }

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), user_blogs_path(current_user), class: 'btn'
