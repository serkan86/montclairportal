.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for([@forum, @topic]) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), forum_topics_path(@forum), class: 'btn'
