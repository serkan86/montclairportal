%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => root_path}
        = image_tag 'data:image/png;base64,', width: 20, height: 20
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => blogs_path} Blog Posts
        %li
          %a{:href => forums_path} Forum
      %ul.nav.navbar-nav.navbar-right
        -#%li
        -#  %a{:href => "#"} Link
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => user_path(current_user)} Profile
              %li
                = link_to messages_path do
                  Messages
                  %span.badge= current_user.received_messages.unreaded.count

              %li.divider
              %li= link_to 'Log out', destroy_user_session_path, method: :delete
        - else
          .navbar-form.navbar-left{:role => "search"}
            = link_to 'Log in', new_user_session_path, class: 'btn btn-default'
            = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default'