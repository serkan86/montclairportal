.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for([:hq, @forum]) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :description

      .form-actions
        = f.button :submit, class: 'btn btn-default'
        = link_to t('cancel'), hq_forums_path, class: 'btn'
