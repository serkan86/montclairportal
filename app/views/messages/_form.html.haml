= simple_form_for(message, url: messages_path) do |f|
  = f.error_notification

  .row
    .col-sm-12
      .form-inputs
        = f.input :received_messageable_id, input_html: {value: user_id}, as: :hidden
        = f.input :body, label: false
      .form-actions
        .pull-right
          = f.button :submit, 'Send'
          .clearfix
