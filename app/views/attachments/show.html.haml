- content_for :toolbar do
  = link_to edit_attachment_path(@attachment ), class: 'btn btn-default' do
    %i.icon-pencil
    = t('action_button.edit')
.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = t('tt.show', resource_name: Attachment.model_name.human)
  .panel-body
    = show_for @attachment do |s|
      = s.attribute :title
      = s.attribute :description
      = s.association :user
